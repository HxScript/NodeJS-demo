<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        #success,#defeat {
            display: none;
        }
    </style>
    <title>树洞app!</title>
  </head>
  <body>
    <header>
              <div class="navbar navbar-dark bg-dark box-shadow">
                <div class="container d-flex justify-content-between">
                  <a href="/" class="navbar-brand d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg>
                    <strong>树洞</strong>
                  </a>
                  <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                </div>
              </div>


            </header>


    <main role="main">
      <hr>
      <div class="container">
        <form action="">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">姓名：</span>
              <input type="text" class="form-control" id="name" name="name" placeholder="请输入你的名字">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">留言：</span>
              <textarea name="name" rows="6"  id="liuyan" name="liuyan" cols="80" type="text" class="form-control" placeholder="请输入你的留言" > </textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-offset-2 col-sm-6">
              <button id="tijiao" class="btn btn-success" type="button">提交</button>
            </div>
          </div>
          <div class="alert alert-success" role="alert" id="success">
              <a href="#">表单已经成功提交！</a>
          </div>
          <div class="alert alert-info" role="alert" id="defeat">
              <a href="#">表单提交失败！</a>
          </div>
        </form>

        <div class="message"></div>
      </div>
        </main>

    <footer class="text-muted">
              <div class="container">
                <p class="float-right">
                  <a href="#">Back to top</a>
                </p>
                <p>Album view example is © Bootstrap, Refactor By HxScript.</p>
                <p>Interest In It? <a href="../../">GitHub</a></p>
              </div>
            </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.bootcss.com/jquery/1.11.0/jquery.js"></script>
    <script src="https://cdn.bootcss.com/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.bootcss.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        $("#tijiao").click(function() {
            $("#success").hide()
            $("#defeat").hide()
            $.post("/tijiao", {
                "name" : $("#name").val(),
                "liuyan" : $("#liuyan").val()
            },function(result) {
                if (result.result == 1) {
                    $("#success").fadeIn()
                }  else if (result.result == -1) {
                    $("#defeat").fadeIn()
                }
                return
            })
        })
    </script>
  </body>
</html>
